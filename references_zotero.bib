@article{bradleyPsilocybinTherapyMood2025,
	title = {Psilocybin therapy for mood dysfunction in {Parkinson}’s disease: an open-label pilot trial},
	copyright = {2025 This is a U.S. Government work and not under copyright protection in the US; foreign copyright protection may apply},
	issn = {1740-634X},
	shorttitle = {Psilocybin therapy for mood dysfunction in {Parkinson}’s disease},
