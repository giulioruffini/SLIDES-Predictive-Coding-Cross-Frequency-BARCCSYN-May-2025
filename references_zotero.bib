	journal = {NeuroImage},
	author = {Chacko, Ravi V. and Kim, Byungchan and Jung, Suh Woo and Daitch, Amy L. and Roland, Jarod L. and Metcalf, Nicholas V. and Corbetta, Maurizio and Shulman, Gordon L. and Leuthardt, Eric C.},
