	journal = {Journal of Affective Disorders},
	author = {Le, Gia Han and Wong, Sabrina and Badulescu, Sebastian and Au, Hezekiah and Di Vincenzo, Joshua D. and Gill, Hartej and Phan, Lee and Rhee, Taeho Greg and Ho, Roger and Teopiz, Kayla M. and Kwan, Angela T. H. and Rosenblat, Joshua D. and Mansur, Rodrigo B. and McIntyre, Roger S.},
	month = jun,
