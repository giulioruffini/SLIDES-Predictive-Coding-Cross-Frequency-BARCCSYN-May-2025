	issn = {1664-0640},
	shorttitle = {Parvalbumin interneuron deficiency in the prefrontal and motor cortices of spontaneously hypertensive rats},
	url = {https://www.frontiersin.org/journals/psychiatry/articles/10.3389/fpsyt.2024.1359237/full},
	doi = {10.3389/fpsyt.2024.1359237},
	abstract = {{\textless}sec{\textgreater}{\textless}title{\textgreater}Background{\textless}/title{\textgreater}{\textless}p{\textgreater}Attention deficit hyperactivity disorder (ADHD) is characterized by impairments in developmental–behavioral inhibition, resulting in impulsivity and hyperactivity. Recent research has underscored cortical inhibition deficiencies in ADHD via the gamma-aminobutyric acid (GABA)ergic system, which is crucial for maintaining excitatory–inhibitory balance in the brain. This study explored postnatal changes in parvalbumin (PV) immunoreactivity, indicating GABAergic interneuron types, in the prefrontal (PFC) and motor (MC) cortices of spontaneously hypertensive rats (SHRs), an ADHD animal model.{\textless}/p{\textgreater}{\textless}/sec{\textgreater}{\textless}sec{\textgreater}{\textless}title{\textgreater}Methods{\textless}/title{\textgreater}{\textless}p{\textgreater}Examining PV- positive (PV+) cells associated with dopamine D2 receptors (D2) and the impact of dopamine on GABA synthesis, we also investigated changes in the immunoreactivity of D2 and tyrosine hydroxylase (TH). Brain sections from 4- to 10-week-old SHRs and Wistar Kyoto rats (WKYs) were immunohistochemically analyzed, comparing PV+, D2+ cells, and TH+ fiber densities across age-matched SHRs and WKYs in specific PFC/MC regions.{\textless}/p{\textgreater}{\textless}/sec{\textgreater}{\textless}sec{\textgreater}{\textless}title{\textgreater}Results{\textless}/title{\textgreater}{\textless}p{\textgreater}The results revealed significantly reduced PV+ cell density in SHRs: prelimbic ({\textasciitilde}20\% less), anterior cingulate ({\textasciitilde}15\% less), primary ({\textasciitilde}15\% less), and secondary motor ({\textasciitilde}17\% less) cortices. PV+ deficits coincided with the upregulation of D2 in prepubertal SHRs and the downregulation of TH predominantly in pubertal/postpubertal SHRs.{\textless}/p{\textgreater}{\textless}/sec{\textgreater}{\textless}sec{\textgreater}{\textless}title{\textgreater}Conclusion{\textless}/title{\textgreater}{\textless}p{\textgreater}Reduced PV+ cells in various PFC regions could contribute to inattention/behavioral alterations in ADHD, while MC deficits could manifest as motor hyperactivity. D2 upregulation and TH deficits may impact GABA synthesis, exacerbating behavioral deficits in ADHD. These findings not only shed new light on ADHD pathophysiology but also pave the way for future research endeavors.{\textless}/p{\textgreater}{\textless}/sec{\textgreater}},
	language = {English},
	urldate = {2025-03-18},
	journal = {Frontiers in Psychiatry},
	author = {Bogdańska-Chomczyk, Ewelina and Równiak, Maciej and Huang, Andrew Chih-Wei and Kozłowska, Anna},
	month = mar,
	year = {2024},
	note = {Publisher: Frontiers},
	keywords = {Attention-Deficit/Hyperactivity Disorder, Cortex, Dopamine receptor, GABAergic system, Spontaneously hypertensive rat, animal model, parvalbumin, tyrosinehydroxylase},
}

