@article{gosztylaAlzheimersAmyloidvAntimicrobial2018,
	title = {Alzheimer's {Amyloid}-β is an {Antimicrobial} {Peptide}: {A} {Review} of the {Evidence}},
	volume = {62},
	issn = {1875-8908},
	shorttitle = {Alzheimer's {Amyloid}-β is an {Antimicrobial} {Peptide}},
