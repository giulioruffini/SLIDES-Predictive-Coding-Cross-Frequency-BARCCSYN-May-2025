	author = {Chen, Shanshan and Wu, Huimin and Song, Yu and Ge, Honglin and Yan, Zheng and Xue, Chen and Qi, Wenzhang and Yuan, Qianian and Lin, Xingjian and Chen, Jiu and {Alzheimer's Disease Neuroimaging Initiative}},
