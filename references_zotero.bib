@article{fristonWhatValueAccumulated2012,
	title = {What is value—accumulated reward or evidence?},
	volume = {6},
	issn = {1662-5218},
	url = {https://www.frontiersin.org/journals/neurorobotics/articles/10.3389/fnbot.2012.00011/full},
	doi = {10.3389/fnbot.2012.00011},
	abstract = {{\textless}p{\textgreater}Why are you reading this abstract? In some sense, your answer will cast the exercise as valuable—but what is value? In what follows, we suggest that {\textless}italic{\textgreater}value is evidence{\textless}/italic{\textgreater} or, more exactly, log Bayesian evidence. This implies that a sufficient explanation for valuable behavior is the accumulation of evidence for internal models of our world. This contrasts with normative models of optimal control and reinforcement learning, which assume the existence of a value function that explains behavior, where (somewhat tautologically) behavior maximizes value. In this paper, we consider an alternative formulation—active inference—that replaces policies in normative models with prior beliefs about the (future) states agents should occupy. This enables optimal behavior to be cast purely in terms of inference: where agents sample their sensorium to maximize the evidence for their generative model of hidden states in the world, and minimize their uncertainty about those states. Crucially, this formulation resolves the tautology inherent in normative models and allows one to consider how prior beliefs are themselves optimized in a hierarchical setting. We illustrate these points by showing that any optimal policy can be specified with prior beliefs in the context of Bayesian inference. We then show how these prior beliefs are themselves prescribed by an imperative to minimize uncertainty. This formulation explains the saccadic eye movements required to read this text and defines the value of the visual sensations you are soliciting.{\textless}/p{\textgreater}},
	language = {English},
	urldate = {2025-03-14},
	journal = {Frontiers in Neurorobotics},
	author = {Friston, Karl and Adams, Rick and Montague, Read},
	month = nov,
	year = {2012},
	note = {Publisher: Frontiers},
	keywords = {Bayesian, active inference, evidence, free energy, selection, self-organisation, surprise, value},
}

@article{alonNetworkMotifsTheory2007,
	title = {Network motifs: theory and experimental approaches},
	volume = {8},
