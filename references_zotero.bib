	journal = {JAMA Psychiatry},
	author = {Myran, Daniel T. and Harrison, Lyndsay D. and Pugliese, Michael and Solmi, Marco and Anderson, Kelly K. and Fiedorowicz, Jess G. and Perlman, Christopher M. and Webber, Colleen and Finkelstein, Yaron and Tanuseputro, Peter},
	month = nov,
