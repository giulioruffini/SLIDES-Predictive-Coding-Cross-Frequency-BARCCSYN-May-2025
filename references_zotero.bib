	pmid = {36758230},
	keywords = {Animals, Brain, Head, Membrane Potentials, Neurons, Rats, Transcranial Direct Current Stimulation, compartment models, electric field effects, non-invasive brain stimulation (NIBS), spherical harmonics, trancranial direct current stimulation (tDCS)},
}

@article{aberraBiophysicallyRealisticNeuron2018,
