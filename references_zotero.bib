@misc{schmidhuberSimpleAlgorithmicPrinciples2007a,
	title = {Simple {Algorithmic} {Principles} of {Discovery}, {Subjective} {Beauty}, {Selective} {Attention}, {Curiosity} \& {Creativity}},
