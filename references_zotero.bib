	journal = {Frontiers in Aging Neuroscience},
	author = {Garcés, Pilar and Vicente, Raul and Wibral, Michael and Pineda Pardo, Jose Angel and Lopez, Maria Eugenia and Aurtenetxe, Sara and Marcos, Alberto and de Andrés, Maria Emiliana and Yus, Miguel and Sancho, Miguel and Maestú, Fernando and Fernández, Alberto},
