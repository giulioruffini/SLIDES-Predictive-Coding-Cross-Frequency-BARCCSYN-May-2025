	author = {Doering, Andreas and Isham, Chris},
	year = {2010},
	note = {arXiv:0803.0417 [quant-ph]},
	keywords = {General Relativity and Quantum Cosmology, High Energy Physics - Theory, Mathematical Physics, Mathematics - Mathematical Physics, Quantum Physics},
	pages = {753--937},
}

@article{rochaRoleHomeostaticPlasticity2024,
