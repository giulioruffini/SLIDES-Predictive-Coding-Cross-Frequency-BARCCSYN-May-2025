	author = {Sakashita, Yuichi and Abe, Kenji and Katagiri, Nobuyuki and Kambe, Toshie and Saitoh, Toshiaki and Utsunomiya, Iku and Horiguchi, Yoshie and Taguchi, Kyoji},
	year = {2015},
	note = {Publisher: Pharmaceutical Society of Japan},
	pages = {134--138},
}

