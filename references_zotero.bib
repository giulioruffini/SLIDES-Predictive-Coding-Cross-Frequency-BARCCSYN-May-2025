	number = {2},
	urldate = {2025-04-11},
	journal = {Alzheimer's \& Dementia},
	author = {Karakatsani, Maria Eleni and Nozdriukhin, Daniil and Tiemann, Savannah and Yoshihara, Hikari A. I. and Storz, Rafael and Belau, Markus and Ni, Ruiqing and Razansky, Daniel and Deán-Ben, Xosé Luís},
	year = {2025},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/alz.14511},
	keywords = {Alzheimer's disease, blood–brain barrier, brain hemodynamics, magnetic resonance imaging, mouse models, optoacoustic imaging, therapeutic ultrasound, transcranial pulsed stimulation},
	pages = {e14511},
}

