	month = mar,
	year = {2019},
	pmid = {30833389},
	pmcid = {PMC6431188},
	keywords = {Action Potentials, Animals, Brain, Electric Stimulation, Electroencephalography, Macaca mulatta, Male, Neurons, Primates, Transcranial Direct Current Stimulation, phase-locking, spike timing, tACS, tES, transcranial alternating current stimulation},
	pages = {5747--5755},
}

@article{krauseTranscranialDirectCurrent2017,
