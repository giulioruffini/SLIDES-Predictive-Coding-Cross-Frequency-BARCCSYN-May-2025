	number = {2},
	journal = {Electroencephalography and Clinical Neurophysiology},
	author = {Menon, V. and Freeman, W. J. and Cutillo, B. A. and Desmond, J. E. and Ward, M. F. and Bressler, S. L. and Laxer, K. D. and Barbaro, N. and Gevins, A. S.},
