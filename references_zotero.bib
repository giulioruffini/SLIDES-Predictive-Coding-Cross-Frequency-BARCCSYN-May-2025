@misc{jiricekSpatialMismatchEEG2024,
	title = {Spatial ({Mis})match {Between} {EEG} and {fMRI} {Signal} {Patterns} {Revealed} by {Spatio}-{Spectral} {Source}-{Space} {EEG} {Decomposition}},
