	keywords = {Algorithms, Animals, Biophysical model, Brain, Computer Simulation, EEG, Electroencephalography, Humans, MEG, Magnetoencephalography, Models, Neurological, Power-law spectrum, Scale-free dynamics, Signal Processing, Computer-Assisted},
