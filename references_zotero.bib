@article{altomareHomebasedTranscranialAlternating2023,
	title = {Home-based transcranial alternating current stimulation ({tACS}) in {Alzheimer}'s disease: rationale and study design},
	volume = {15},
	issn = {1758-9193},
	shorttitle = {Home-based transcranial alternating current stimulation ({tACS}) in {Alzheimer}'s disease},
