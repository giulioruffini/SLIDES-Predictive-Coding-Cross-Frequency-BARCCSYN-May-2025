	number = {1},
	journal = {The European Journal of Neuroscience},
	author = {Troubat, Romain and Barone, Pascal and Leman, Samuel and Desmidt, Thomas and Cressant, Arnaud and Atanasova, Boriana and Brizard, Bruno and El Hage, Wissam and Surget, Alexandre and Belzung, Catherine and Camus, Vincent},
