	author = {Shipp, Stewart},
	month = nov,
	year = {2016},
	note = {Publisher: Frontiers},
	keywords = {Generative Model, Precision, Prediction error, canonical microcircuit, feedback inhibition, forward pathway, hierarchy, interneuron function, predictive coding},
}

