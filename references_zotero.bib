	urldate = {2025-01-17},
	journal = {Molecular Psychiatry},
	author = {Agnorelli, Claudio and Cinti, Alessandra and Barillà, Giovanni and Lomi, Francesco and Scoccia, Adriano and Benelli, Alberto and Neri, Francesco and Smeralda, Carmelo Luca and Cuomo, Alessandro and Santarnecchi, Emiliano and Tatti, Elisa and Godfrey, Kate and Tarantino, Francesca and Fagiolini, Andrea and Rossi, Simone},
