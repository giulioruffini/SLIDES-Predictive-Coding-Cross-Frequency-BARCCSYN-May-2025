@article{bolwerkHowArtChanges2014,
	title = {How {Art} {Changes} {Your} {Brain}: {Differential} {Effects} of {Visual} {Art} {Production} and {Cognitive} {Art} {Evaluation} on {Functional} {Brain} {Connectivity}},
