@article{voytekDynamicNetworkCommunication2015,
	title = {Dynamic network communication as a unifying neural basis for cognition, development, aging, and disease},
	volume = {77},
	issn = {1873-2402},
	doi = {10.1016/j.biopsych.2015.04.016},
	abstract = {Perception, cognition, and social interaction depend upon coordinated neural activity. This coordination operates within noisy, overlapping, and distributed neural networks operating at multiple timescales. These networks are built upon a structural scaffolding with intrinsic neuroplasticity that changes with development, aging, disease, and personal experience. In this article, we begin from the perspective that successful interregional communication relies upon the transient synchronization between distinct low-frequency ({\textless}80 Hz) oscillations, allowing for brief windows of communication via phase-coordinated local neuronal spiking. From this, we construct a theoretical framework for dynamic network communication, arguing that these networks reflect a balance between oscillatory coupling and local population spiking activity and that these two levels of activity interact. We theorize that when oscillatory coupling is too strong, spike timing within the local neuronal population becomes too synchronous; when oscillatory coupling is too weak, spike timing is too disorganized. Each results in specific disruptions to neural communication. These alterations in communication dynamics may underlie cognitive changes associated with healthy development and aging, in addition to neurological and psychiatric disorders. A number of neurological and psychiatric disorders-including Parkinson's disease, autism, depression, schizophrenia, and anxiety-are associated with abnormalities in oscillatory activity. Although aging, psychiatric and neurological disease, and experience differ in the biological changes to structural gray or white matter, neurotransmission, and gene expression, our framework suggests that any resultant cognitive and behavioral changes in normal or disordered states or their treatment are a product of how these physical processes affect dynamic network communication.},
	language = {eng},
	number = {12},
	journal = {Biological Psychiatry},
	author = {Voytek, Bradley and Knight, Robert T.},
	month = jun,
	year = {2015},
	pmid = {26005114},
	pmcid = {PMC4443259},
	keywords = {Action Potentials, Aging, Animals, Anxiety, Autism, Brain, Brain Diseases, Brain Waves, Cognition, Coherence, Cortical Synchronization, Coupling, Depression, Gamma, Humans, Models, Neurological, Nerve Net, Network dynamics, Neural oscillations, Neurons, Parkinson’s disease, Schizophrenia, Theta},
	pages = {1089--1097},
}

